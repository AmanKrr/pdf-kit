{
  "compilerOptions": {
    "allowSyntheticDefaultImports":true,
    "target": "ES6",
    "module": "ES2020",
    "declaration": true,
    "outDir": "./ts-build",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,            // so editors can trace back to your TS source
    "stripInternal": false,            // keep all declarations
    // you could also set a separate declarationDir:
    // "declarationDir": "ts-build/types",
  },
  "include": ["src/**/*.ts", "src/**/*tsx","src/**/*.css"],
  "exclude": ["node_modules"]
}
